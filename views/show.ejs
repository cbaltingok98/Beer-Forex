<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= beer.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded medium image" src="<%= beer.image %>">
            
            <div class="description">
                <p>Fiyat : <%- beer.realPrice %></p>
                <p>Değişken Fiyat : <%- beer.currentPrice %></p>
            </div>
            <a class="ui inverted green button" href="/beers/<%= beer._id %>/edit">DÜZENLE</a>
            <form id="delete" action="/beers/<%= beer._id %>?_method=DELETE" method="POST">
                <button class="ui inverted red button">SİL</button>
            </form>
            <a class="ui inverted green button" href="/beers">PANEL'E DÖN</a>
        </div>
    </div>
</div>
</div> <% include ./partials/footer %>